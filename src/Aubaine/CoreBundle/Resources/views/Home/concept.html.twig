{% extends "AubaineCoreBundle::layout.html.twig" %}

{% block title %}
  Concept - {{ parent() }}
{% endblock %}

{% block body %}

    <div id="body-concept">
        <div id='concept-header'>
            <h1>
                <img alt="Brand" src="{{ asset('images/logo-aubaine-new-large.png') }}" style="height:8rem;">
            </h1>
            <h2>
                Les bons plans autour de vous aujourd'hui, restez à l'affut !
            </h2>
        </div>
        <div id="concept-user">
            <h3>
                <!-- Nos commerces partenaires proposent des opportunités à tout moment, restez à l'affut ! -->
            </h3>
            <div class="assets">
                <h4>Promotions</h4>
                <p>
                    Prix cassés, destockages, soldes,  bénéficiez des prix réduits qui s'offrent à vous.
                </p>
            </div>
            <div class="assets">
                <h4>Évènements</h4>
                <p>
                    Dîtes bonjour à l'improvisation. Trouvez des évènements à la dernière minute.
                </p>
            </div>
            <div class="assets">
                <h4 class="discover">Nouveautés</h4>
                <p>
                    Nouveau produit, nouveau concept, laissez vous surprendre par leur créativité. 
                </p>
            </div>
        </div>
        <div id="concept-partner">
            <div class="figures"><span><b>{{number_partner}}</b><br> Partenaires</span></div>
            <!-- <h3>
                Boutiques, Bars, Restaurants, Coiffeur, et bien d'autres encore.... 
            </h3> -->
              <div id="myCarousel" class="carousel slide" data-ride="carousel">

                <!-- Wrapper for slides -->
                <div class="carousel-inner">

                    <div class="item active">
                        {% image '@AubaineCoreBundle/Resources/public/images/partners/bonheur-dans-le-pot.jpg' %}
                            <img src="{{ asset_url }}" alt="Example" style="width:100%;" />
                        {% endimage %}
                        <div class="carousel-caption">
                            <h4>Le Bonheur est dans le Pot</h4>
                        </div>
                    </div>

                    <div class="item">
                        {% image '@AubaineCoreBundle/Resources/public/images/partners/Cafe-contretemps.jpg' %}
                            <img src="{{ asset_url }}" alt="Example"  style="width:100%;" />
                        {% endimage %}
                        <div class="carousel-caption">
                            <h4>Café Contre-Temps</h4>
                        </div>
                    </div>

                    <div class="item">
                        {% image '@AubaineCoreBundle/Resources/public/images/partners/la-fine-equipe.png' %}
                            <img src="{{ asset_url }}" alt="Example"  style="width:100%;" />
                        {% endimage %}
                        <div class="carousel-caption">
                            <h4>La Fine Équipe</h4>
                        </div>
                    </div>

                </div>

                <!-- Left and right controls -->
                <!-- <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                  <span class="glyphicon glyphicon-chevron-left"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                  <span class="glyphicon glyphicon-chevron-right"></span>
                  <span class="sr-only">Next</span>
                </a> -->
              </div>
        </div>
        <div id="concept-teaser">
            <h3>Vous êtes un commerce ?</h3>
            <p>
                Partagez des messages en fonction de votre activité.
            </p>
            <a class="btn btn-primary" href="{{ path('aubaine_core_partner') }}">En savoir plus</a>
        </div>
        <div id="concept-contact">
            <h3>Contact</h3>
            <p>
                Pour obtenir un partenariat ou pour plus d'information sur notre service.
            </p>
            <p>
                <a href="mailto:contact@aubaineapp.fr" class="email">contact@aubaineapp.fr</a> <br>
                <span class="phone">07 83 86 60 99</span>
            </p>
        </div>
    </div>

{% endblock %}
  {% block javascripts %}
        {{ parent() }}
        {% javascripts filter='jsqueeze'
            'bundles/aubainecore/js/concept.js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
  {% endblock %}

